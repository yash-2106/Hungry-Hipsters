    <style>
        :root {
            font-size: 16px;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', sans-serif;
            line-height: 1.6;
            background-color: #fffaf2;
            color: #1a1a1a;
        }

        header {
            background: url('/Images/Hungry (1).png') no-repeat center center/cover;
            height: 100vh;
            position: relative;
        }

        nav {
            position: absolute;
            top: 1.25rem;
            right: 2rem;
            display: flex;
            gap: 2rem;
        }

        nav a {
            text-decoration: none;
            color: #fff;
            font-weight: bold;
            font-size: 1.25rem;
        }

        nav a:hover {
            color: #ffc107;
        }

        .name {
            position: absolute;
            top: 1.5rem;
            left: 2rem;
        }

        .name h1 {
            font-size: 2rem;
            font-weight: 900;
            color: rgb(197, 63, 1);
        }

        .header-content {
            position: absolute;
            top: 30%;
            left: 50%;
            transform: translate(-50%, -30%);
            text-align: center;
            color: white;
        }

        .header-content h1 {
            font-size: 3rem;
            color: goldenrod;
        }

        .header-content p {
            font-size: 1.25rem;
            margin-top: 1rem;
        }

        main section {
            padding: 4rem 2rem;
            max-width: 1200px;
            margin: auto;
        }

        .dineout h2 {
            text-align: center;
            margin-bottom: 2rem;
            font-size: 2rem;
        }

        .card-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(20rem, 1fr));
            gap: 2rem;
        }

        .card {
            background-color: #fff;
            border-radius: 0.5rem;
            box-shadow: 0 0.25rem 0.5rem rgba(0, 0, 0, 0.1);
            overflow: hidden;
            transition: transform 0.3s ease;
        }

        .card:hover {
            transform: scale(1.03);
        }

        .card img {
            width: 100%;
            height: 12.5rem;
            object-fit: cover;
        }

        .card-body {
            padding: 1rem;
        }

        .card-body h5 {
            font-size: 1.25rem;
            margin-bottom: 0.5rem;
        }

        .card-body p {
            margin: 0.25rem 0;
        }

        .card-body button a {
            text-decoration: none;
            color: #fff;
            background: #6b8e23;
            padding: 0.5rem 1rem;
            border-radius: 0.25rem;
        }

        .team-section {
            background-color: #fff8e1;
            text-align: center;
        }

        .team-section h1 {
            font-size: 2.5rem;
            margin-bottom: 2rem;
        }

        .team-grid {
            display: flex;
            justify-content: center;
            gap: 2rem;
            flex-wrap: wrap;
        }

        .team-member {
            width: 12rem;
            text-align: center;
        }

        .team-member img {
            width: 100%;
            border-radius: 50%;
            border: 4px solid #6b8e23;
            transition: all 0.3s ease-in-out;
        }

        .team-member img:hover {
            border-color: goldenrod;
            transform: scale(1.05);
        }


        #about-section {
            background-color: seashell;
            text-align: center;
        }

        #about-section h1 {
            font-size: 2rem;
            color: darkgreen;
        }

        #about-section p {
            max-width: 600px;
            margin: 1rem auto;
            font-size: 1rem;
        }

        #contact {
            background-color: rgb(245, 233, 213);
            text-align: center;
        }

        #contact h1 {
            font-size: 2rem;
            color: brown;
        }

        #contact p {
            font-size: 1rem;
        }

        footer.footer {
            background-color: #56392b;
            color: whitesmoke;
            padding: 2.5rem 1rem;
        }

        .footer-container {
            display: flex;
            flex-wrap: wrap;
            justify-content: space-between;
            gap: 2rem;
            max-width: 1200px;
            margin: auto;
        }

        .footer-left .logo {
            font-size: 1.5rem;
            color: wheat;
        }

        .footer-left .tagline {
            font-style: italic;
            color: #79973b;
        }

        .footer-links {
            list-style: none;
            padding: 0;
        }

        .footer-links a {
            text-decoration: none;
            color: #cce3c9;
            display: block;
            margin: 0.5rem 0;
        }

        .footer-links a:hover {
            color: #6b8e23;
        }

        .social-icons a {
            margin-right: 1rem;
            color: #ccc;
            font-size: 1.25rem;
        }

        .footer-bottom {
            text-align: center;
            padding-top: 1rem;
            font-size: 0.875rem;
            color: black;
            font-weight: bold;
            border-top: 1px solid #d2b48c;
            margin-top: 2rem;
        }

        @media (max-width: 600px) {
            nav {
                flex-direction: column;
                top: 1rem;
                right: 1rem;
                gap: 1rem;
            }

            .header-content h1 {
                font-size: 2rem;
            }

            .header-content p {
                font-size: 1rem;
            }

            .team-grid {
                flex-direction: column;
            }

            .footer-container {
                flex-direction: column;
                text-align: center;
            }

            .team-grid {
                flex-direction: column;
                align-items: center;
            }

        }
    </style>
